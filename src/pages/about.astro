---
import Layout from '#layouts/layout.astro';
import ExperienceCollectionPod from '#pods/experience-collection/experience-collection.pod.astro';
import MiniBioPod from '#pods/mini-bio/mini-bio.pod.astro';
import ToolCollectionPod from '#pods/tool-collection/tool-collection.pod.astro';
import ContactPod from '#pods/contact/contact.pod.astro';
import { getMetadata } from '#core/api';
const metadata = await getMetadata();
---

<Layout title={metadata.aboutTitle} description={metadata.aboutDescription} favicon={metadata.favicon.url}>
  <MiniBioPod type="hero" slot="hero" />

  <ExperienceCollectionPod />

  <Fragment slot="aside">
    <ToolCollectionPod />
    <ContactPod />
  </Fragment>
</Layout>
