---
import Hero from '#components/hero.astro';
import { getHeroHome } from './api';

const content = await getHeroHome();
---

<Hero ariaLabelledby="hero-title">
  <div class="flex flex-col gap-2 text-center">
    <h1 class="text-primary-700 dark:text-primary-200 text-5xl font-bold" id="hero-title">
      {content.title}
    </h1>
    <p class="m-auto max-w-[30ch] text-lg leading-[1.2] tracking-normal">
      {content.description}
    </p>
  </div>
</Hero>
