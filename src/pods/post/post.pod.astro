---
import Header from './components/header.astro';
import Content from './components/content.astro';
import type { Post } from '#pods/post-collection/api';

interface Props {
  postEntry: Post;
}

const { postEntry } = Astro.props;

const likeCount = 6;

const postContent = {
  backButton: 'Go back',
  published: 'Published',
  minRead: 'min read',
};
---

<section class="flex shrink-1 grow flex-col gap-12 px-6 py-4">
  <Header gobackText={postContent.backButton} publishedText={postContent.published} date={postEntry.date} />
  <Content entry={postEntry} likeCount={likeCount} minReadText={postContent.minRead} />
</section>
